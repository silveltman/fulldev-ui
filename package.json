			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./plugin": "./dist/plugin.cjs"
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@histoire/plugin-svelte": "^0.15.9",
		"@modyfi/vite-plugin-yaml": "^1.0.4",
